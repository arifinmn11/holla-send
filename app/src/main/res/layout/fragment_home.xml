<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary_700"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:paddingBottom="70dp">

                        <TextView
                            style="@style/TextView.PoppinsNormal16spWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="30dp"
                            android:text="Welcome" />

                        <TextView
                            style="@style/TextView.PoppinsNormal16spWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:paddingLeft="30dp"
                            android:text="Aseo Saeo / Courier" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-60dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMyTask"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_undraw_notebook_tlkl" />

                            <TextView
                                style="@style/TextView.PoppinsNormal16spBlack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="My Task"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/my_task_notification"
                                style="@style/TextView.PoppinsNormal12spWhite"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="-152dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/radius_notification"
                                android:gravity="center"
                                android:minWidth="20dp"

                                android:text="20"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvNewTask"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_undraw_mailbox_re_dvds" />

                            <TextView
                                style="@style/TextView.PoppinsNormal16spBlack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="New Task"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/new_task_notification"
                                style="@style/TextView.PoppinsNormal12spWhite"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="-152dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/radius_notification"
                                android:gravity="center"
                                android:minWidth="20dp"
                                android:text="20"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_undraw_on_the_way_re_swjt_2_" />

                            <TextView
                                style="@style/TextView.PoppinsNormal16spBlack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Start To Sent"
                                android:textAlignment="center" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCheckPoint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="15dp"
                                android:src="@drawable/ic_undraw_location_review_dmxd_disabled" />

                            <TextView
                                style="@style/TextView.PoppinsNormal16spGrey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Check Point"
                                android:textAlignment="center" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</FrameLayout>