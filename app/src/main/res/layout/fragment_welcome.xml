<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.welcome.WelcomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_undraw_dreamer_gxxi" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/welcome_text"
                style="@style/TextView.PoppinsNormal32spBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/welcome_title"
                android:textAlignment="center" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/thumbnail_text"
                style="@style/EditText.PoppinsNormal14spGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/welcome_description"
                android:textAlignment="center" />

            <Button
                android:id="@+id/started_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:text="GET STARTED" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>