<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.history.HistoryFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_700"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="10">

                <TextView
                    style="@style/TextView.PoppinsNormal16spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="History" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-8dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_forward"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="src_in"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/page_text"
                        style="@style/TextView.PoppinsNormal12spWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginTop="5dp"
                        android:text="Page 1 of 5"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/button_next"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="src_in"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/total_text"
                    style="@style/TextView.PoppinsNormal12spWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="-8dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="Total : - items " />
            </LinearLayout>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_new_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/myHistoryList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_alert"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_undraw_no_data_re_kwbl" />

        <TextView
            android:id="@+id/message_alert"
            style="@style/TextView.PoppinsNormal16spGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="My Task not available!"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>